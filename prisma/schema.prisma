generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User{
  id         String      @id @default(uuid())
  name       String
  src        String?     @db.Text
  phone      String      @unique
  credits    Int
}

